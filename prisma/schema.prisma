// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "sqlite"
}

// ==========================================
// Room (วง) - The drinking circle
// ==========================================
model Room {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  hostId      String
  difficulty  Int      @default(3) // 1-5 stars
  is18Plus    Boolean  @default(false)
  maxPlayers  Int      @default(8)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  players     Player[]
  sessions    GameSession[]
}

// ==========================================
// Player (ผู้เล่น)
// ==========================================
model Player {
  id          String   @id @default(cuid())
  name        String
  roomId      String
  isHost      Boolean  @default(false)
  isReady     Boolean  @default(false)
  isOnline    Boolean  @default(true)
  drinkCount  Int      @default(0)
  skipCount   Int      @default(0)
  joinedAt    DateTime @default(now())
  lastSeenAt  DateTime @default(now())
  
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  events      GameEvent[]
}

// ==========================================
// Question (คำถาม)
// ==========================================
model Question {
  id          String   @id @default(cuid())
  text        String
  type        String   // QUESTION, TRUTH, DARE, CHAOS, VOTE
  level       Int      // 1=chill, 2=mid, 3=spicy
  is18Plus    Boolean  @default(false)
  isPublic    Boolean  @default(true)
  isActive    Boolean  @default(true)
  usageCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String?  // null = system, otherwise admin id
  
  events      GameEvent[]
}

// ==========================================
// User (ผู้ใช้งาน)
// ==========================================
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String    // hashed with bcrypt
  name          String
  avatarUrl     String?
  isVerified    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  lastLoginAt   DateTime?
  
  sessions      UserSession[]
  gameSessions  GameSession[]
}

// ==========================================
// UserSession (เซสชันผู้ใช้)
// ==========================================
model UserSession {
  id          String   @id @default(cuid())
  userId      String
  token       String   @unique
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ==========================================
// GameSession (เซสชันการเล่น)
// ==========================================
model GameSession {
  id          String   @id @default(cuid())
  roomId      String
  userId      String?  // Link to user who created session
  mode        String   // QUESTION, VOTE, TRUTH_OR_DARE, CHAOS, MIXED
  roundCount  Int      @default(0)
  status      String   @default("ACTIVE") // ACTIVE, PAUSED, COMPLETED, ABANDONED
  startedAt   DateTime @default(now())
  endedAt     DateTime?
  
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user        User?    @relation(fields: [userId], references: [id])
  events      GameEvent[]
}

// ==========================================
// GameEvent (เหตุการณ์ในเกม)
// ==========================================
model GameEvent {
  id          String   @id @default(cuid())
  sessionId   String
  playerId    String
  questionId  String?
  type        String   // ANSWERED, SKIPPED, DRANK, COMPLETED, GAVE_UP, VOTED, TIMEOUT
  data        String?  // JSON string for additional event data
  createdAt   DateTime @default(now())
  
  session     GameSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  player      Player      @relation(fields: [playerId], references: [id], onDelete: Cascade)
  question    Question?   @relation(fields: [questionId], references: [id])
}

// ==========================================
// Admin (ผู้ดูแลระบบ)
// ==========================================
model Admin {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String   // hashed
  name        String
  role        String   @default("MODERATOR") // SUPER_ADMIN, ADMIN, MODERATOR
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  lastLoginAt DateTime?
}

// ==========================================
// AppSettings (ตั้งค่าแอป)
// ==========================================
model AppSettings {
  id                  String   @id @default("app_settings")
  is18PlusEnabled     Boolean  @default(true)
  defaultDifficulty   Int      @default(3)
  defaultMaxPlayers   Int      @default(8)
  defaultTimerSeconds Int      @default(30)
  updatedAt           DateTime @updatedAt
}
